{
    "builders": [
      {
        "type":"proxmox",
        "proxmox_url":  "https://{{user `proxmox_host`}}:8006/api2/json",
        "insecure_skip_tls_verify": true,
        "username": "{{ user `proxmox_username` }}",
        "password": "{{ user `proxmox_password` }}",
        "vm_name": "WindowsServer2016",
        "node": "{{user `proxmox_node`}}",
        "sockets": 1,
        "cores": 2,  
        "cpu_type": "host",
        "memory": 4096,
        "os": "win10",
        "network_adapters": [
          {
            "model": "virtio",
            "bridge": "{{user `proxmox_network_with_dhcp_and_internet`}}"
          }
        ],
        "disks": [
          {
            "type": "scsi",
            "disk_size": "64G",
            "storage_pool": "nvme-lvm",
            "storage_pool_type": "lvm-thin",
            "cache_mode": "writeback",
            "format": "raw"
          }
        ],
        "vga": {
          "type": "std",
          "memory": 256
        },
        "scsi_controller": "virtio-scsi-pci",
        "iso_file": "local:iso/Windows_Server_2016_Datacenter_EVAL_en-us_14393_refresh.ISO",
        "boot_wait": "2m",
        "boot": "order=scsi0;ide2",
        "additional_iso_files": [
          {
            "device": "ide3",
            "iso_url": "./http/Autounattend_Win2016.iso",
            "iso_storage_pool": "local",
            "iso_checksum": "5119e02471003d3f7da335f6cc45a244",
            "unmount": true
          },
          {
            "device": "sata0",
            "iso_file": "local:iso/virtio-win.iso",
            "iso_checksum": "3bbc69bdcf1d46f4ee0ddaf35c2656f3",
            "unmount": true
          }
        ],
        "communicator": "winrm",
        "winrm_username": "vagrant",
        "winrm_password": "vagrant",
        "winrm_timeout": "4h",
        "qemu_agent": true,
        "unmount_iso": true,
        "template_name": "WindowsServer2016",
        "template_description": "Windows Server 2016, generated on {{ isotime \"2006-01-02T15:04:05Z\" }}"
      }
    ],
    "provisioners": [
      {
        "type": "windows-shell",
        "remote_path": "/tmp/script.bat",
        "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
        "scripts": [
          "../../Packer/scripts/enable-rdp.bat"
        ]
      },
      {
        "type": "powershell",
        "scripts": [
          "../../Packer/scripts/debloat-windows.ps1"
        ]
      },
      {
        "type": "windows-restart"
      },
      {
        "type": "windows-shell",
        "remote_path": "/tmp/script.bat",
        "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
        "scripts": [
          "{{template_dir}}/scripts/pin-powershell-cdrom.bat",
          "../../Packer/scripts/set-winrm-automatic.bat",
          "../../Packer/scripts/compile-dotnet-assemblies.bat",
          "../../Packer/scripts/uac-enable.bat",
          "../../Packer/scripts/compact.bat"
      ]
    }
  ]
}