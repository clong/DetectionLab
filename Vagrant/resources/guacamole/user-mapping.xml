<user-mapping>
    <authorize username="vagrant" password="vagrant">
        <connection name="logger">
            <protocol>ssh</protocol>
            <param name="hostname">10.1.1.105</param>
            <param name="port">22</param>
            <param name="username">vagrant</param>
            <param name="password">vagrant</param>
        </connection>

        <connection name="wef">
            <protocol>rdp</protocol>
            <param name="hostname">10.1.1.103</param>
            <param name="port">3389</param>
            <param name="username">vagrant</param>
            <param name="password">vagrant</param>
            <param name="security">nla</param>
            <param name="ignore-cert">true</param>
        </connection>

        <connection name="win10">
            <protocol>rdp</protocol>
            <param name="hostname">10.1.1.104</param>
            <param name="port">3389</param>
            <param name="username">vagrant</param>
            <param name="password">vagrant</param>
            <param name="security">nla</param>
            <param name="ignore-cert">true</param>
        </connection>

        <connection name="dc">
            <protocol>rdp</protocol>
            <param name="hostname">10.1.1.102</param>
            <param name="port">3389</param>
            <param name="username">vagrant</param>
            <param name="password">vagrant</param>
            <param name="security">nla</param>
            <param name="ignore-cert">true</param>
        </connection>
    </authorize>
</user-mapping>